{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2018",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "build",
    "baseUrl": "./src",
    "types": ["reflect-metadata"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ],
      "@services/*": ["services/*"],
      "@ioc/*": ["ioc/*"],
      "@models/*": ["models/*"],
      "@interfaces/*": ["interfaces/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}